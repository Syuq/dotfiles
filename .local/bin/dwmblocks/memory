#!/bin/bash

# 1: left click
# 2: middle click
# 3: right click
# 4: scroll up
# 5: scroll down
# 6: Shift + left click
case $BUTTON in
	1) "$TERMINAL" -e "$(which bashtop && echo bashtop || echo htop)" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

printf " ðŸ§   $(free -m | awk '/Mem/ { printf "%.2fGB\n", ($3 + $5)/1024}') "
