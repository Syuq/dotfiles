#!/bin/bash

# 1: left click
# 2: middle click
# 3: right click
# 4: scroll up
# 5: scroll down
# 6: Shift + left click
case $BUTTON in
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$(date '+%I')" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

date "+ ï³  %a, %d %b $icon%I:%M%p "
