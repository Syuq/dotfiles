#!/bin/bash

# This script only works on Arch system, and require `pacman-contrib` package to work

# 1: left click
# 2: middle click
# 3: right click
# 4: scroll up
# 5: scroll down
# 6: Shift + left click
case $BUTTON in
	1) "$TERMINAL" -e popwindow --update && pkill -RTMIN+10 dwmblocks ;;
    3) sudo pacman -Sy && notify-send "Update packages:" "$(pacman -Qu)" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
printf " ðŸ“¦ $(checkupdates 2>/dev/null | wc -l) "

exit 0
